<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/clubLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_launcher"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        android:paddingStart="1dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clubName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Club Name"
            android:elevation="4dp"
            android:textSize="20sp"
            android:textColor="@color/lightRed"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/clubAbout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="This is a Club for the this thit and that but do nothing"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_light"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>