<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.VerifyEmailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your\nEmail"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_black"
        android:textSize="35sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>


    <LinearLayout
        android:id="@+id/warningbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/warningred"
        android:gravity="center"
        android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/warningboxtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Not Verified !!"
                android:textSize="18dp"
                android:fontFamily="@font/helveticaneue_medium"
                android:textColor="@color/text_black"
                android:padding="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Provided by You is"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:fontFamily="@font/helveticaneue_light"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/email_to_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:hint="email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Verify Email "
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:fontFamily="@font/helveticaneue_light"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/verify_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start"
        android:visibility="invisible" />

</LinearLayout>