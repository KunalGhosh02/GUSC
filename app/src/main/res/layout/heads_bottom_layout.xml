<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/helveticaneue_medium"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black"/>

        <LinearLayout
            android:id="@+id/box1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/clubHeadName1"
                    android:layout_width="0dp"
                    android:layout_weight="80"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Club Heads Name"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/helveticaneue_regular"
                    android:textColor="@color/text_black" />
                <ImageButton
                    android:id="@+id/emailbutton1"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="45dp"
                    android:padding="6dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_email_black"
                    android:scaleType="centerCrop"/>
                <ImageButton
                    android:id="@+id/callbutton1"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:padding="6dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_call_black"
                    android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clubHeadName2"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Club Heads Name"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/helveticaneue_regular"
                android:textColor="@color/text_black" />
            <ImageButton
                android:id="@+id/emailbutton2"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="45dp"
                android:padding="6dp"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_email_black"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:id="@+id/callbutton2"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:padding="6dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_call_black"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>