<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rectangle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/transparent"
            android:src="@drawable/galgotias_university_small_logo"
            android:elevation="4dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About GUSC App"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"
            android:textColor="@color/text_black"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version :- 0.00.12"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By :- TechnoJam"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_black"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers:"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code By :- Rahul Singh"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designed By :- Mayank Srivastav"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_black"
            android:textStyle="normal"
            android:fontFamily="@font/helveticaneue_regular"/>


    </LinearLayout>

</LinearLayout>